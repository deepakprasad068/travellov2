<% for(let camp of comp){%>
<div class="card mb-3">
  <div class="m-4 d-inline-flex">
    <div class="col-md-4">
      <% if(camp.Image.length){%>
      <img
        src="<%=camp.Image[0].url%>"
        alt=""
        class="img-fluid inline-flex rounded"
      />
      <%}else{%>
      <img
        src="https://cdn.vectorstock.com/i/preview-1x/82/99/no-image-available-like-missing-picture-vector-43938299.jpg"
        alt=""
        class="img-fluid inline-flex rounded"
      />
      <%}%>
    </div>
    <div class="clo-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=camp.title%></h5>
        <p class="card-text"><%=camp.description%></p>
        <p class="card-text">
          <small class="text-muted"><%=camp.location%></small>
        </p>
        <a class="btn btn-primary" href="/campground/<%=camp._id%>"
          >View <%=camp.title%></a
        >
      </div>
    </div>
  </div>
</div>
<%}%>
