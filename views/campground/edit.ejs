<%layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campground/<%=camp._id%>?_method=PUT"
      method="post"
      enctype="multipart/form-data"
      novalidate
      class="validated-form"
    >
      <div class="mb-2">
        <label for="title" class="form-label">Title</label>
        <input
          required
          type="text "
          value="<%=camp.title%>"
          id="title"
          class="form-control"
          name="campground[title]"
        />
      </div>
      <div class="mb-2">
        <label for="location" class="form-label">Location</label>
        <input
          required
          type="text "
          id="location"
          class="form-control"
          value="<%=camp.location%>"
          name="campground[location]"
        />
      </div>
      <div class="mb-2">
        <label for="Image" class="form-label">upload image</label>
        <input type="file" name="Image" multiple />
      </div>
      <div>
        <label for="price" class="form-label">Price</label>
        <div class="input-group mb-2">
          <span class="input-group-text">$</span>
          <input
            required
            value="<%=camp.price%>"
            type="text"
            class="form-control"
            id="price"
            name="campground[price]"
            aria-label="Amount (to the nearest dollar)"
          />
          <span class="input-group-text">.00</span>
        </div>
      </div>
      <div class="mb-2">
        <label for="description" class="form-label">Description</label>
        <textarea
          required
          type="text"
          id="description"
          class="form-control"
          name="campground[description]"
        >
        <%=camp.description%></textarea
        >
      </div>
      <div class="mb-2">
        <%camp.Image.forEach(function(img,i){%>
        <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImage[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Delete</label>

        <%})%>
      </div>
      <button class="btn btn-info">Update Campground</button>
      <a href="/campground">All Campground</a>
      <a href="/campground/<%=camp._id%>">Back</a>
    </form>
  </div>
</div>
